generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"       
  url      = env("DATABASE_URL")
}

model admin {
  id String @id
  @@map("admin")
}

model User {
  id        String    @default(uuid()) @id
  name      String  
  surname   String
  email     String    @unique
  password  String
  nickname  String    @unique

  PrivateMessages PrivateMessages[]
  messages  Messages[]
  posts     Posts[]
  cpf       String?   @unique
  rg        String?   @unique

  @@map("users") // Use a forma no plural para refletir a tabela real no banco de dados
}

model ChatRoom {
  id          String   @default(uuid()) @id 
  name        String   @unique 
  
  messages    Messages[]

  @@map("chat_rooms") // Use underscore_case para refletir a tabela real no banco de dados
}

model Messages {
  id            String      @default(uuid()) @id
  author        String      
  content       String
  room          String
  hour          String

  roomSended    ChatRoom    @relation(fields: [room], references: [name])
  creator       User        @relation(fields: [author], references: [nickname])
  
  @@map("messages")
}

model PrivateMessages {
  id            String      @default(uuid()) @id
  author        String      
  content       String
  to            String

  creator       User        @relation(fields: [author], references: [nickname])
  
  @@map("PrivateMessages")
}

model Posts {
  id            String  @default(uuid()) @id
  title         String
  content       String
  author        String 
  shippingTime  DateTime

  creator User    @relation(fields: [title], references: [nickname])
  @@map("posts")
}